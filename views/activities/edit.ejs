  
  
  <body>
    <h1>Edit Activity</h1>
    <section class="editActivityForm">
      <form action="/activities" method="POST">
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="title">Title</label>
              <input type="text" class="form-control" name="title" id="title" value="<%=activities.title%>">
            </div>
            <div class="form-group col-md-6">
              <label for="note">Note</label>
              <input type="text" class="form-control" name="note" id="note" value="<%=activities.note%>">
            </div>
          </div>
          <div class="form-group">
            <label for="experienceDesc">Experience Description</label>
            <textarea class="form-control" name="experienceDesc" id="experienceDesc" rows="3" value="<%=activities.experienceDesc%>"></textarea>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">Email address</label>
            <input type="url" class="form-control" name="photo" id="photo" placeholder="photo url">
          </div>
        <button type="submit" class="btn btn-warning">Save</button>
      </form>
    </section>
  </body>

  